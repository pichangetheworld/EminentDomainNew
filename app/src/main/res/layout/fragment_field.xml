<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_field"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/survey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/survey"
        android:contentDescription="@string/survey"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/warfare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/warfare"
        android:contentDescription="@string/warfare"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/colonize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/colonize"
        android:contentDescription="@string/colonize"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/producetrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/producetrade"
        android:contentDescription="@string/produce_trade"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/research"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/research"
        android:contentDescription="@string/research"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/okay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/ok" />

</LinearLayout>